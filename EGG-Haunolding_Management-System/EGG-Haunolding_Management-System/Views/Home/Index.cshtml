@model HomeViewModel

<h2>Total Value: @Model.TotalValue</h2>

@foreach (var household in Model.Households)
{
    <div class="household-tile" onclick="location.href='@Url.Action("Details", "Home", new { name = household.Name })'">
        <h3>@household.Name</h3>
        <p>Value: @household.Value</p>
    </div>
}