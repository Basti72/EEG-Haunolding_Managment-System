<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="login-form-container">
            <h1 class="text-center">Importieren</h1>
            <form asp-action="UploadFile" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="fileInput">Datei auswählen:</label>
                    <input type="file" name="file" id="fileInput" class="form-control-file" />
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-secondary btn-lg">
                        <i class="bi bi-upload"></i> Hochladen
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>